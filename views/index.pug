extends layout.pug
include mixins/logoList.pug
include mixins/sponsorList.pug
include mixins/randomQuote.pug

block content
  .home

    .section.row
      .jumbotron
        h1= title
        p(class="lead")= message
        p Are you new to JS101? 
        div.actions
          a(class='btn btn-primary btn-lg' href='/getting-started') Get Started

          .row
            +logoList(logoList)
    
    .section.row.bg
      h1 Kick start your JavaScript with a friendly bunch of enthusiasts
  
      .row
        .col-lg-6
          h2 Meetup Archive
          a(class='btn btn-primary' href='https://github.com/CodeHubOrg/discussions/issues') View Details
       
        .col-lg-6
          h2 Next Meetup
          a(class='btn btn-primary' href='https://www.meetup.com/CodeHub-Bristol/') Sign Up

    .section.row
      .jumbotron
        h1 Join the Conversation

        p Our Gitter channel. You will need a GitHub account.
        a(class='btn btn-primary' href='https://gitter.im/CodeHubOrg/discussions/') Join the discussion


    
    .section.bg
      .row
        h1 What do we do?
        .col-lg-3
          h2 Presentations
          p You present and we all learn.
          a(class='btn btn-primary' href='/presentations') View Details
        .col-lg-3
          h2 Pair Programming
          p Two heads are better than one
          a(class='btn btn-primary' href='/pair-programming') View Details
        .col-lg-3
          h2 Code Reviews
          p Improve your code
          a(class='btn btn-primary' href='/code-reviews') View Details
        .col-lg-3
          h2 Bleeding Edge
          p Use the latest technologies
          a(class='btn btn-primary' href='/tech-stack') View Details
      .row
        .col-lg-3
          h2 Guidance
          p What should I learn next?
          a(class='btn btn-primary' href='/roadmap') View Details
        .col-lg-3
          h2 Best Practice
          p Software development methodologies
          a(class='btn btn-primary' href='/best-practices') View Details
        .col-lg-3
          h2 Team Environment
          p Sharing is caring
          a(class='btn btn-primary' href='/collaborative-learning') View Details
        .col-lg-3
          h2 Level Up
          p Get prepared for professional work
          a(class='btn btn-primary' href='/careers') View Details
    .section.row.bg-light
      h1 In Bristol and into JavaScript?
      h1 You need to join Javascript101!
      a(class='btn btn-danger btn-lg' href='https://www.meetup.com/CodeHub-Bristol/') Join Now       
    .section.row
      .col-lg-3.poll
        .panel.panel-primary
          .panel-heading
            h3.panel-title Favourite Framework?
          .panel-body
            ul.list-group
              - var frameworks = ['React', 'Vue', 'Angular', 'Angular 2', 'Choo', 'Cycle', 'Backbone', 'Ember', 'Knockout']
              for framework in frameworks
                li.list-group-item
                  checkbox
                    label
                      input(type='checkbox' value='')
                      =framework
          .panel-footer.text-center
            button(type='button' class='btn btn-primary btn-block btn-s')='Vote'
            a.small='View Result'

      .col-lg-4.gallery
        .panel.panel-primary
          .panel-heading
            h3.panel-title Gallery
          .panel-body            
            img(src='img/gallery/good-vs-definitive.jpg')

      .col-lg-4.terminal
        .panel.panel-primary
          .panel-heading
            h3.panel-title Command Line
          .panel-body
            p JavaScripts in your terminal
            a(class='btn btn-success' href='http://terminal.jcubic.pl/examples.php#starwars') A New Hope
            
      .col-lg-4.wonderland
        .panel.panel-primary
          .panel-heading
            h3.panel-title Are you ready for Wonderland?
          .panel-body
            a(class='btn btn-danger btn-lg' href='http://www.cornify.com') Yes 
            a(class='btn btn-primary btn-lg' href='https://www.youtube.com/watch?v=dQw4w9WgXcQs') No
             
                                
      .col-lg-8.quote
        .panel.panel-primary
          .panel-heading
            h3.panel-title Inspiration
          .panel-body 
            +randomQuote(quotesInspiration) 

             
      .col-lg-8.quote
        .panel.panel-primary
          .panel-heading
            h3.panel-title God Father
          .panel-body 
            +randomQuote(quotesCrockford)
          
      .col-lg-8.quote
        .panel.panel-primary
          .panel-heading
            h3.panel-title Funsies
          .panel-body 
            +randomQuote(quotesJokes)  

    .section.row
      h1 Testimonials
      .col-lg-3.quote
        .panel.panel-primary
          .panel-heading
            h3.panel-title Twitter
          .panel-body Journey of a thousand miles is guided by the JavaScript 101 map! - Gicela 
          
      .col-lg-3.quote
        .panel.panel-primary
          .panel-heading
            h3.panel-title Twitter
          .panel-body Javascript 101 is the source, change your life, swear to god - Dave
          
      .col-lg-3.quote
        .panel.panel-primary
          .panel-heading
            h3.panel-title Twitter
          .panel-body Who knew functional programming would be so much fun!? - Katja 
          
      .col-lg-3.quote
        .panel.panel-primary
          .panel-heading
            h3.panel-title Twitter
          .panel-body I live to JavaScript 101.  I JavaScript 101 to live - Tim
          

        
    .section.row.bg-light
      h1 What are you waiting for? Get Involved!
      h2 Next Meet up
      p Date...
      p Location...
      p 12 Members are attending...
      a(class='btn btn-danger btn-lg' href='https://www.meetup.com/CodeHub-Bristol/') Meetup

    .section.row
      h1 Our Sponsors
      +sponsorList(sponsorList)
        
